<%= render 'shared/nav' %>

<%= form_with(url: refresh_teams_path) do %>
    <%= submit_tag('Refresh') %>
<% end %>

<hr />

<h3>Teams:</h3>

<table>
  <% @teams.each_with_index do |team, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= team.last_offensive_score %></td>
        <td><%= team.last_defensive_score %></td>
        <td><%= render partial: 'shared/team/name', locals: { team: team } %></td>
        <td>
          <%= link_to 'Last Game', last_game_team_path(team) %>
        </td>
      </tr>
  <% end %>
</table>
